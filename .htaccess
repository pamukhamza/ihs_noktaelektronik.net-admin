# .htaccess dosyasının başı

# Hata sayfalarını özelleştirme
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# URL yeniden yazma
RewriteEngine On
RewriteBase /

# www'yi olmayan URL'leri www'li hale getirme
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ http://www.%{HTTP_HOST}/$1 [L,R=301]

# .php uzantısını kaldırmak için
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# Directory listing'i kapatma
Options -Indexes

